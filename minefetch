#!/usr/bin/env bash

# Colors
GREEN="\e[32m"
CYAN="\e[36m"
RESET="\e[0m"

# ===== ASCII Logo "UN" =====
logo() {
cat << "EOF"
 _    _ _    _   _           _ 
| |  | | |  | | | |         | |
| |  | | |  | | | ___  ___| |
| |  | | |  | | |/ _ \/ __| |
| |__| | |__| | | |  __/\__ \_|
 \____/ \____/  |_|\___||___(_)
EOF
echo "     MineFetch VPS INFORMATION "
}

# ===== System Info =====
info() {
echo -e "${CYAN}------------------------${RESET}"
echo "User:      $USER"
echo "Host:      $(hostname)"
echo "OS:        $(grep PRETTY_NAME /etc/os-release | cut -d= -f2 | tr -d '\"')"
echo "Kernel:    $(uname -r)"
echo "Uptime:    $(uptime -p)"
echo "CPU:       $(lscpu | grep 'Model name' | cut -d: -f2 | xargs)"
echo "RAM:       $(free -h | awk '/Mem:/ {print $3 " / " $2}')"
echo "Disk:      $(df -h / | awk 'NR==2 {print $3 " / " $2}')"
}

# ===== Display side by side =====
paste <(logo) <(info)
